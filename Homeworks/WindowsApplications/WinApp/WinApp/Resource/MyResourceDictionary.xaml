<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinApp.Resource">

    <LinearGradientBrush x:Key="orangeToGreenBrush"
                             StartPoint="0.5,0"
                             EndPoint="0.5,1">
        <GradientStop Color="Orange" Offset="0.3"/>
        <GradientStop Color="LemonChiffon" Offset="0.7"/>
    </LinearGradientBrush>

    <!-- Remember this must below.-->
    <!-- Without key it's mean that all buttons will have this styles.-->
    <!-- Based on inherits other style, but only one.-->
    <Style x:Key="greenButtonStyle" 
               TargetType="Button">
        <Setter Property="Background" Value="Green"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="20,10"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
</ResourceDictionary>
